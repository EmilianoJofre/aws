<div class="flex flex-wrap justify-center my-8">
  <div class="w-full">
    <a
      class="flex justify-center w-32 mx-auto mt-4 mb-8"
      href="/"
    >
      <%= image_tag("logo.png") %>
    </a>
  </div>
  <div class="w-full max-w-lg border shadow-md">
    <div class="w-full max-w-lg px-16 pt-12 pb-8 bg-white">
      <div class="flex flex-row items-center mb-8">
        <h1 class="text-lg font-semibold text-vl-blue mr-2">Crear nueva contraseña</h1>
        <info-tooltip
          classes="text-vl-gray-200 h-5"
          text='- Mínimo 8 caracteres
                - Al menos una mayúscula
                - Al menos un número
                - Al menos un caracter especial'
          placement="right-start"
          tooltip-type="form"
        >
        <info-tooltip/>
      </div>
      <%= form_with(url: update_password_path(@model_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :token, value: @token%>
        <div class="mb-4">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Nueva contraseña", class: "placeholder-vl-gray-200 appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-white text-sm leading-tight focus:outline-none focus:shadow-outline border-2 border-vl-gray-200"%>
        </div>
        <div class="mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repetir contraseña", class: "placeholder-vl-gray-200 appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-white text-sm leading-tight focus:outline-none focus:shadow-outline border-2 border-vl-gray-200" %>
        </div>
        <% if flash.alert %>
        <div
          class="relative my-3 text-sm text-red-700"
          role="alert"
        >
          <ul>
          <li><%= flash.alert %></li>
          </ul>
        </div>
        <% end %>
        <div>
          <div class="flex justify-around mb-4">
            <%= f.submit "CAMBIAR", class: "bg-white border-2 border-vl-blue hover:bg-vl-blue hover:text-white rounded-lg text-vl-blue py-2 px-4 mt-5 rounded focus:outline-none focus:shadow-outline tracking-widest text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
