<div class='flex justify-center my-8'>
  <div class='w-full max-w-lg px-16 pt-4 pb-8 mb-4 bg-white border-t-8 shadow-md border-primary'>
    <a
      class="flex justify-center mt-4 mb-8"
      href="/"
    >
      <%= image_tag('logo.png') %>
    </a>
    <h1 class='flex justify-center pb-4 text-lg font-bold text-gray-700'>Regístrate</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4') do |f| %>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='username'>
          Nombre
        </label>
        <%= f.text_field :first_name, required: true, placeholder: 'Juan', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary'%>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:first_name).first %>
        </div>
      </div>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='username'>
          Apellido
        </label>
        <%= f.text_field :last_name, placeholder: 'Pérez', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary'%>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:last_name).first %>
        </div>
      </div>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='username'>
          Número de teléfono (opcional)
        </label>
        <%= f.text_field :phone_number, placeholder: '+569', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary'%>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:phone_number).first %>
        </div>
      </div>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='username'>
          Institución
        </label>
        <%= f.text_field :institution, autocomplete: 'off', placeholder: 'Inversiones SpA', class:'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary' %>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:institution).first %>
        </div>
      </div>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='username'>
          Correo
        </label>
        <%= f.email_field :email, autocomplete: 'email', placeholder: 'juanito@correo.com', class:'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary' %>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:email).first %>
        </div>
      </div>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='password'>
          Contraseña
        </label>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'Mínimo 6 caracteres', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary' %>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:password).first %>
        </div>
      </div>
      <div class='mb-4'>
        <label class='block mb-2 text-sm text-gray-700' for='password'>
          Confirmar contraseña
        </label>
        <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Repetir contraseña', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 bg-secondary text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary' %>
        <div class='text-red-700 registration-form__alert'>
          <%= resource.errors.full_messages_for(:password_confirmation).first %>
        </div>
      </div>
      <div class='flex justify-center mb-4'>
        <%= f.submit 'Registrarse', class: 'bg-primary mx-2 rounded-lg hover:bg-gray-600 tracking-widest text-white py-1 px-8 mt-5 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
